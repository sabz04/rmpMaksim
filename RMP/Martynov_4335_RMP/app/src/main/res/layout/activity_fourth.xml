<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthActivity"
    android:theme="@style/AppTheme"
    android:background="@drawable/background_4"
    app:fontFamily="@font/montserrat_bold"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B3FFFFFF"
        >
        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "1"
            android:src="@mipmap/ic_userv2"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight = "1"
            android:text="Главная"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight = "1"
            android:text="Галерея"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight = "1"
            android:text="Карта курортов"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthSwipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="40dp"
        android:background="#B3FFFFFF"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/textHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Альта-Бадия Италия"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/textContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="80dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Италия славится не только пиццей и модой, но и своими красивыми горами, вид которых вы не забудете никогда."
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonGo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/montserrat_bold"
            android:padding="15dp"
            android:text="Узнать новое"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageEllipse1"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_purplecircle"

                />

            <ImageView
                android:id="@+id/imageEllipse2"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_purplecircle" />

            <ImageView
                android:id="@+id/imageEllipse3"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/ic_whcircle" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>